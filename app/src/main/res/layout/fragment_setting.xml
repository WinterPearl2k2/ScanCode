<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting.Fragment_Setting">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:text="@string/setting_chung"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="@color/green"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TableLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/background_setting"
            android:layout_width="match_parent"
            android:stretchColumns="1,2"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:src="@drawable/dark_241"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="18dp"

                    android:text="@string/setting_ligthdark"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_column="1"
                    android:layout_height="match_parent"/>

                <Switch
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/sw_light"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </TableRow>
            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:src="@drawable/language_241"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv"
                    android:textSize="18dp"
                    android:text="@string/setting_language"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_column="1"
                    android:layout_height="match_parent" />

            </TableRow>
        </TableLayout>


    </LinearLayout>


</FrameLayout>