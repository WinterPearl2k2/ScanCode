<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/history_recycleView_item"
    android:padding="10dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/hisDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textColor="#888888"
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:ems= "5"
        app:layout_constraintStart_toEndOf="@+id/hisIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hisTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textStyle="bold"
        android:textColor="#A8A8A8"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/hisIcon"
        app:layout_constraintTop_toBottomOf="@id/hisDesc" />

    <ImageView
        android:id="@+id/hisIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:backgroundTint="@color/pink_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkboxHistory"
        android:visibility="gone"
        android:layout_width="27dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:buttonTint="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>