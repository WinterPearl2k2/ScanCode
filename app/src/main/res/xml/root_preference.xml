<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res-auto"
    tools:ignore="NamespaceTypo">
    <PreferenceCategory android:title="@string/settings_control" >
        <SwitchPreference
            android:key="sound"
            android:icon="@drawable/sound_241"
            android:title="@string/setting_sound" />
        <SwitchPreference
            android:icon="@drawable/vibrate_241"
            android:key="vi"
            android:title="@string/setting_vibrate" />
        <SwitchPreference
            android:key="copy"
            android:icon="@drawable/copy_241"
            android:title="@string/setting_copy" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/setting_chung">
        <SwitchPreference
            android:icon="@drawable/dark_241"
            android:key="v"
            android:summaryOn="@string/setting_off"
            android:summaryOff="@string/setting_on"
            android:title="@string/setting_ligthdark"
            android:defaultValue="false"/>
        <Preference
            android:icon="@drawable/language_241"
            android:key="language"
            android:title="@string/setting_language"
            android:useSimpleSummaryProvider="true" />
    </PreferenceCategory>


    <PreferenceCategory android:title="@string/setiing_intro">
        <Preference
            android:icon="@drawable/dark_241"
            android:key="introduc"
            android:title="@string/setiing_intro" />
        <Preference
            android:icon="@drawable/feedback"
            android:key="feedback"
            android:title="@string/settings_feedback"/>
        <Preference
            android:icon="@drawable/version_242"
            android:key="version"
            android:title="@string/setting_version" />
        <Preference
            android:icon="@drawable/help_241"
            android:key="help"
            android:title="@string/setting_huongdan" />
    </PreferenceCategory>

</PreferenceScreen>